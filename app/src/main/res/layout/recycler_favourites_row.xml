<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/recyclerRowFavLinearLayout"
        >
        <ImageView
            android:id="@+id/bookCoverFav"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="fitCenter"
            android:background="#e0e0e0"
            android:src="@drawable/default_book_cover"
            android:padding="5dp"
            android:contentDescription="TODO" />
        <TextView
            android:id="@+id/bookNameFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="@string/book_name"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/bookAuthorFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="@string/book_author"
            android:textColor="#9e9e9e"/>
        <TextView
            android:id="@+id/bookPriceFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="@string/book_price"
            android:textStyle="bold"
            android:textColor="#00c853"
            android:fontFamily="sans-serif-light"/>
        <TextView
            android:id="@+id/bookRatingFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="@string/rating"
            android:textStyle="bold"
            android:textColor="#ffc400"
            app:drawableStartCompat="@drawable/ic_rating" />
    </LinearLayout>

</androidx.cardview.widget.CardView>